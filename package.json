{
  "name": "react-app-boilerplate",
  "version": "1.0.0",
  "description": "A boilerplate for starting a new react app with SSR, webpack, fast-refresh and more",
  "main": "index.js",
  "scripts": {
    "start": "concurrently 'npm run watch:ssr' 'npm run serve:ssr' 'npm run watch:csr'",
    "serve:ssr": "node src/ssr/server.js",
    "watch:csr": "webpack serve --config webpack/webpack.csr.config.js",
    "watch:ssr": "webpack watch --config webpack/webpack.ssr.config.js",
    "build": "npm run build:ssr && npm run build:csr",
    "build:csr": "NODE_ENV=production webpack --config webpack/webpack.csr.config.js",
    "build:ssr": "NODE_ENV=production webpack --config webpack/webpack.ssr.config.js",
    "lint": "eslint --ext js,jsx .",
    "lint:fix": "eslint --ext js,jsx --fix ."
  },
  "author": "Igor Rafael",
  "license": "ISC",
  "dependencies": {
    "@loadable/component": "^5.15.0",
    "@loadable/server": "^5.15.0",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "lodash": "^4.17.21",
    "morgan": "^1.10.0",
    "prop-types": "^15.7.2",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-router": "^5.2.0",
    "react-router-dom": "^5.2.0"
  },
  "devDependencies": {
    "@babel/core": "^7.14.6",
    "@babel/preset-env": "^7.14.7",
    "@babel/preset-react": "^7.14.5",
    "@loadable/babel-plugin": "^5.13.2",
    "@loadable/webpack-plugin": "^5.15.1",
    "@pmmmwh/react-refresh-webpack-plugin": "^0.4.3",
    "babel-loader": "^8.2.2",
    "concurrently": "^6.2.0",
    "eslint": "^7.30.0",
    "eslint-plugin-react": "^7.24.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "html-webpack-plugin": "^5.3.2",
    "react-refresh": "^0.9.0",
    "schema-utils": "^3.1.0",
    "webpack": "^5.44.0",
    "webpack-cli": "^4.7.2",
    "webpack-dev-server": "^3.11.2",
    "webpack-node-externals": "^3.0.0"
  }
}
